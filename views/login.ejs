<%- include('./partials/start') %>

<div class="container " style="max-width: 600px; margin-top: 100px;">
    <h1 class="text-center mb-3">Login</h1>
    <form action="/user/login" method="POST">
        <div class="form-group">
            <input type="email" name="email" id="email" class="form-control mb-3" placeholder="E-mail">
        </div>
        <div class="form-group">
            <input type="password" name="password" id="password" class="form-control mb-3" placeholder="Password">
        </div>
        <button class="btn btn-outline-success" type="submit">Submit</button>
    </form>
    <p>Don't have an Account?<a href="/user/register">Register</a></p>
</div>

<%- include('./partials/end') %>